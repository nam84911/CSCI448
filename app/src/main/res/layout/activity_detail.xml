<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent_lightTeal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent_lightTeal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_name"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter name of activity"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="200dp"
            android:paddingBottom="20dp"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent_lightPurple"
            android:text="â˜°"
            android:textColor="@color/colorAccent_navy"
            android:textSize="30sp" />

    </LinearLayout>


    <Button
        android:id="@+id/locationAddress_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Search address"
        android:inputType="textPostalAddress"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo_xhdpi" />

    <Button
        android:id="@+id/pick_time"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_button"
        android:onClick="showDatePickerDialog"
        android:text="Select Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorAccent_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/selectDay_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Day" />

    <!--    <LinearLayout-->
    <!--        android:orientation="horizontal"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="100dp"-->
    <!--        android:layout_gravity="center_horizontal">-->

    <!--        <CheckBox-->
    <!--            android:id="@+id/monday"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:button="@drawable/m_checkbox"-->
    <!--            android:scaleX="0.2"-->
    <!--            android:scaleY="0.2"-->
    <!--            android:scaleType="fitXY"/>-->

    <!--    </LinearLayout>-->

    <RadioGroup
        android:id="@+id/selectDay_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <RadioButton
            android:id="@+id/monday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent_navy" />

        <RadioButton
            android:id="@+id/tuesday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent_navy" />

        <RadioButton
            android:id="@+id/wednesday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent_navy" />

        <RadioButton
            android:id="@+id/thursday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent_navy" />

        <RadioButton
            android:id="@+id/friday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent_navy" />

        <RadioButton
            android:id="@+id/saturday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent_navy" />

        <RadioButton
            android:id="@+id/sunday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent_navy" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/m_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="M" />

        <TextView
            android:id="@+id/t_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="T" />

        <TextView
            android:id="@+id/w_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="W" />

        <TextView
            android:id="@+id/r_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="R" />

        <TextView
            android:id="@+id/f_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="F" />

        <TextView
            android:id="@+id/sat_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="S" />

        <TextView
            android:id="@+id/sun_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="S" />
    </LinearLayout>


    <Button
        android:id="@+id/create_activity"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_button"
        android:text="Create Event"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorAccent_white"
        android:textSize="18sp" />


    <!--<com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

</LinearLayout>